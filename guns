on load:
 set {machinegun::gun} to dragon head of sharpness 70 named "&fMachine Gun"
 set 2nd line of lore of {machinegun::gun} to "&fShoot arrows"
 set {ak47::gun} to bow named "&fAk47"
 set 2nd line of lore of {ak47::gun} to "&fWhat is there to explain?"
 set 3rd line of lore of {ak47::gun} to "&fIt's one of the most famous guns in the world!"
 set {sniperrifle::gun} to bow of power 255 named "&fSniper Rifle"
 set 2nd line of lore of {sniperrifle::gun} to "&fInsta kills an enemy when hit"
 set {rocketlauncher::gun} to dragon head named "&fFireball Shooter"
 set 2nd line of lore of {rocketlauncher::gun} to "&fShoots a fireball that does a fatal blow to the enemy"
 set {submachinegun::gun} to dragon head of sharpness 70 named "&fSubmachine Gun"
 set 2nd line of lore of {submachinegun::gun} to "&fShoots a lot of arrows"
 set {assaultrifle::gun} to bow named "&fAssault Rifle"
 set 2nd line of lore of {assaultrifle::gun} to "&fAssaults Stuff"
 set {m9::gun} to netherite sword of sharpness 10 named "&fM9 Pistol"
 set 2nd line of lore of {m9::gun} to "&fA slow but powerful gun"
 set {gauntlet::e} to dragon head of sharpness 100 named "&fGauntlet"
 set 2nd line of lore of {gauntlet::e} to "&fThe most powerful weapon in FireMC"

on right click:
	if player's tool is {gauntlet::e}:
		loop 10 times:
			if player's held item is {gauntlet::e}:
				wait 1 tick
				shoot a fireball with speed 10
				shoot a fireball with speed 10
				shoot a arrow with speed 10
			else:
				exit 1 loop


on damage:
	if attacker's held item is {gauntlet::e}:
		kill the victim


on right click:
	if player's tool is {machinegun::gun}:
		if player has 10 arrows in his inventory:
			remove 10 arrows from player's inventory
			loop 10 times:
				if player's held item is {machinegun::gun}:
					wait 1 tick
					shoot an arrow
				else:
					exit 1 loop
		else:
			send "You need 10 arrows to use this!" to player
			cancel event

on right click:
	if player's tool is {m9::gun}:
		if player has 1 arrow in his inventory:
			remove 1 arrow from player's inventory
			loop 1 times:
				if player's held item is {m9::gun}:
					wait 1 tick
					shoot an arrow
				else:
					exit 1 loop
		else:
			send "You need 1 arrows to use this!" to player
			cancel event

on right click:
	if player's tool is {assaultrifle::gun}:
		if player has 10 arrows in his inventory:
			remove 10 arrows from player's inventory
			cancel event
			loop 10 times:
				if player's tool is {assaultrifle::gun}:
					wait 2 ticks
					shoot an arrow
				else:
					exit 1 loop
		else:
			send "You need 10 arrows to use this!" to player
			cancel event



on right click:
	if player's tool is {sniperrifle::gun}:
		if player has 1 arrow in his inventory:
			execute player command "uhierqhuihisuifhiusfuiadfsasuidfuuawsd"
		else:
			send "You need 1 arrow to use this!" to player
			cancel event


command /guns:
	permission: guns.sk
	trigger:
		give player {machinegun::gun}
		give player {sniperrifle::gun}
		give player {ak47::gun}
		give player {rocketlauncher::gun}
		give player {submachinegun::gun}
		give player {assaultrifle::gun}
		give player {m9::gun}
		give player {gauntlet::e}

on place of dragon head:
		cancel event

on right click:
	if player's tool is {ak47::gun}:
		if player has 5 arrows in his inventory:
			remove 5 arrows from player's inventory
			cancel event
			loop 5 times:
				if player's tool is {ak47::gun}:
					wait 1 tick
					shoot an arrow
				else:
					exit 1 loop
		else:
			send "You need 5 arrows to use this!" to player
			cancel event

on right click:
	if player's tool is {rocketlauncher::gun}:
		if player has 1 fire charge in his inventory:
			remove 1 fire charge from player's inventory
			cancel event
			loop 1 time:
				if player's tool is {rocketlauncher::gun}:
					wait 1 tick
					shoot a fireball
				else:
					exit 1 loop
		else:
			send "You need 1 fireball to use this!" to player
			cancel event

command /showitem:
	trigger:
		broadcast "%player's name% has showed his %player's tool%"

on item damage:
	cancel event

on right click:
	if player's tool is {submachinegun::gun}:
		if player has 20 arrows in his inventory:
			remove 20 arrows from player's inventory
			cancel event
			loop 20 times:
				if player's tool is {submachinegun::gun}:
					wait 1 tick
					shoot an arrow
				else:
					exit 1 loop
		else:
			send "You need 20 arrows to use this!" to player
			cancel event



